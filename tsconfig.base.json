{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ledger/prisma": ["libs/prisma/src/index.ts"],
      "@smart-ledger/cosmos": ["libs/cosmos/src/index.ts"],
      "@smart-ledger/tracing": ["libs/tracing/src/index.ts"],
      "@ledger/vault": ["libs/vault/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
