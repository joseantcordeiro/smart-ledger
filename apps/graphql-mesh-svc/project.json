{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/graphql-mesh-svc/src",
  "targets": {
    "build": {
      "executor": "@diogovcs/graphql-mesh:build",
      "options": {
        "meshYmlPath": "apps/graphql-mesh-svc/config",
        "singleMeshFile": false,
        "outputPath": "dist/apps/graphql-mesh-svc",
        "rootPath": "apps/graphql-mesh-svc",
        "tsconfigPath": "apps/graphql-mesh-svc/tsconfig.lib.json",
        "typescriptSupport": true
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ],
      "outputs": ["coverage/apps/graphql-mesh-svc"],
      "options": {
        "jestConfig": "apps/graphql-mesh-svc/jest.config.js",
        "passWithNoTests": true
      }
    },
    "serve": {
      "executor": "@diogovcs/graphql-mesh:serve",
      "options": {
        "meshYmlPath": "apps/graphql-mesh-svc/config"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/graphql-mesh-svc/**/*.ts"]
      }
    }
  },
  "tags": []
}
